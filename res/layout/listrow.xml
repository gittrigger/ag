<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listrow_base" android:layout_width="fill_parent" android:gravity="center_vertical" android:layout_height="wrap_content" android:paddingTop="0px" android:paddingBottom="0px" android:paddingLeft="0px" android:paddingRight="0px" >
	
	<RelativeLayout android:id="@+id/listrow_shell"
	        android:layout_width="fill_parent" android:layout_height="90px" android:layout_alignBottom="@+id/listrow_base" android:layout_alignParentTop="true">
		
		<LinearLayout android:layout_height="55px" android:layout_width="55px"  android:background="#A0000000" android:orientation="horizontal" android:padding="1px" android:layout_marginRight="19px" android:layout_marginTop="17px" android:layout_alignParentTop="false" android:layout_alignParentRight="true" />
		
		<ImageView android:scaleType="matrix" android:adjustViewBounds="true" android:src="@drawable/iv" android:layout_width="85px" android:layout_alignParentTop="false" android:layout_alignParentRight="true" android:layout_marginRight="3px" android:layout_marginTop="2px" 
		        android:layout_height="85px" />
		
		<ImageView android:scaleType="matrix" android:adjustViewBounds="true" android:src="@drawable/iv" android:layout_width="85px" android:layout_alignParentTop="false" android:layout_alignParentRight="true" android:layout_marginRight="3px" android:layout_marginTop="2px" 
		        android:layout_height="85px" />
		<ImageView android:id="@+id/listrow_momentb" android:scaleType="centerCrop" android:src="@drawable/wavemoment" android:layout_width="90px"
	 		android:layout_alignParentTop="false" android:layout_alignParentRight="true"
	        android:layout_height="90px" android:adjustViewBounds="true" android:background="#FF000000" android:padding="0px"  android:layout_marginRight="39px" android:layout_marginTop="0px" />
		
		<ImageView android:id="@+id/listrow_shella" android:scaleType="matrix" android:src="@drawable/flatpearl" android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />			
		<ImageView android:id="@+id/listrow_shellb" android:scaleType="matrix" android:src="@drawable/flatpearl2" android:layout_width="wrap_content"
		        android:layout_height="wrap_content" android:layout_alignParentRight="true"/>			
		<ImageView android:id="@+id/listrow_shellc" android:scaleType="matrix" android:src="@drawable/flatpearl3" android:layout_width="wrap_content"
		        android:layout_height="wrap_content" android:layout_alignParentBottom="true"/>			
		<ImageView android:id="@+id/listrow_shelld" android:scaleType="matrix" android:src="@drawable/flatpearlb" android:layout_width="wrap_content"
		        android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" />			
	</RelativeLayout>    
    
    <TextView  
        android:id="@+id/listrow_title" android:layout_marginLeft="13px" android:paddingRight="13px" android:paddingTop="5px" android:paddingBottom="7px" android:gravity="bottom"
        android:layout_width="fill_parent" android:layout_alignParentBottom="true" 
        android:layout_height="90px" android:textSize="18px" android:lines="2" android:text="E" android:ellipsize="middle"/>

	<TextView
	    	android:id="@+id/listrow_opened"
	        android:layout_width="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_below="@id/listrow_title"
	        android:layout_height="wrap_content"
	        android:singleLine="true" android:visibility="gone"
	        android:text="O" android:textSize="21px" />

	
<ImageView android:id="@+id/listrow_moment" android:scaleType="matrix" android:src="@drawable/wavemoment" android:layout_width="wrap_content"
	        android:paddingTop="7px" android:paddingLeft="10px"
	        android:layout_height="wrap_content"/>
	<TextView
	    	android:id="@+id/listrow_published"
	        android:layout_width="wrap_content"
	        android:layout_below="@id/listrow_title"
	        android:layout_alignParentRight="true"
	        android:layout_height="wrap_content" android:layout_alignParentBottom="true"
	        android:singleLine="true" android:visibility="gone"
	        android:shadowRadius="0.3" android:shadowColor="#00007580" android:shadowDx="2" android:shadowDy="1"
	        android:text="T" android:textSize="21px" android:paddingLeft="5px" android:paddingRight="5px" />

	<TextView
	    	android:id="@+id/listrow_momenti"
	        android:layout_width="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_below="@id/listrow_title"
	        android:layout_height="wrap_content"
	        android:singleLine="true" android:visibility="gone"
	        android:text="-1" android:textSize="21px" />


	<TextView
	    	android:id="@+id/listrow_images"
	        android:layout_width="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_below="@id/listrow_title"
	        android:layout_height="wrap_content"
	        android:singleLine="true" android:visibility="gone"
	        android:text="-1" android:textSize="21px" />
	
</RelativeLayout>
